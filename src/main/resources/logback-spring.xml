<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- aplication.yml에 정의한 log level, dir 데이터를 정의합니다 -->
    <springProperty scope="context" name="LOG_LEVEL" source="logging.level"/>
    <!--<springProperty scope="context" name="LOG_DIR" source="logging.dir"/>-->

    <!--콘솔에 로그를 남깁니다.-->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] [%-5level] %logger{36} - %msg%n
            </Pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--파일에 로그를 남깁니다.-->


    <!--파일에 로그를 남깁니다. (Roling)-->

    <!--에러 일 경우 파일에 로그를 남깁니다-->


    <!--
        org.springframework.web 패키지 아래에서 발생하는 INFO 레벨 로그를 Console에 남깁니다.
        root의 속성을 상속받지 않습니다.
    -->
    <logger name="org.springframework.web" level="INFO" additivity="false">
        <appender-ref ref="Console"/>
    </logger>


    <!--
        DEBUG 레벨 로그를 Console에 남깁니다.
    -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="Console"/>
    </root>

</configuration>